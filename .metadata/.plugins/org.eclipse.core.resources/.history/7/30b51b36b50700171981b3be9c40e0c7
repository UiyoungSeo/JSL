class PlusMinus {
	int plus, minus;

	public String plus(int x, int y) {
		plus = x + y;
		return "２つの数の合は " + plus;
	}

	public String minus(int x, int y) {
		minus = x - y;
		return "２つの数の差は" + minus;
	}
}

public class Ex01 {
	public static void main(String[] args) {
		PlusMinus pm = new PlusMinus();
		
		System.out.println(pm.plus(3,4));
	}
}
